@model Lime_Store.Models.Cart
@{
    Layout = null;
    var cartNotFiltered = Model?.CartLines;
    var cartFiltered = Model?.CartFiltered;
    var fee = Model.FinalPrice / 100 * 13;
    var finalSum = Model.FinalPrice + fee;
}

<!DOCTYPE html>
<html lang="ru_RU">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lime_Time | Оплата</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/mainMeow.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
</head><!--/head-->

<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 ">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href=""><i class="fa fa-phone"></i> +7 (228)-322-10-30</a></li>
                                <li><a href=""><i class="fa fa-envelope"></i> Isip_d.v.seryak@mpt.ru</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">

                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">

                        <div class="btn-group pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    Россия
                                    <span class="caret"></span>
                                </button>
                            </div>

                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle usa" data-toggle="dropdown">
                                    Валюта
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="">Рубли</a></li>
                                    <li><a href="">Доллары</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="@Url.Action("Cart")"><i class="fa fa-shopping-cart"></i> Корзина</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li><a href="@Url.Action("Index")">Домашняя страница</a></li>
                                <li class="dropdown">
                                    <a href="#" class="active">Магазин<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="@Url.Action("Shop")" class="active">Товары</a></li>
                                        <li><a href="@Url.Action("Cart")"><i class="fa fa-shopping-cart"></i> Корзина</a></li>
                                    </ul>
                                </li>
                                <li><a href="@Url.Action("ContactUs")">Поддержка</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="search_box pull-right">
                            <input type="text" placeholder="Поиск" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="cart_items">
        <div class="container">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li><a href="#">Главная</a></li>
                    <li class="active">Оплата</li>
                </ol>
            </div><!--/breadcrums-->
            <div class="checkout-options">
                <ul class="nav">
                    <li>
                        <a href=""><i class="fa fa-times"></i>Отмена</a>
                    </li>
                </ul>
            </div><!--/checkout-options-->

            <div class="register-req">
                <p>Пожалуйста заполните поля указанные ниже</p>
            </div><!--/register-req-->
            <div class="shopper-informations">
                <div class="row">
                    <div class="col-sm-8 clearfix">
                        <div class="bill-to">
                            <div class="contact-form">
                                <h2 class="title text-center">Оформление заказа</h2>
                                <div class="status alert alert-success" style="display: none"></div>
                                <form id="main-contact-form" class="contact-form row" name="contact-form" asp-antiforgery="true" asp-action="CheckOutBD" asp-controller="Home">
                                    <div class="form-group col-md-6">
                                        <input type="email" name="email" class="form-control" required="required" placeholder="Почта*">
                                        <span asp-validation-for="Email" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" name="name" class="form-control" required="required" placeholder="Имя*">
                                        <span asp-validation-for="Name" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" name="middlename" class="form-control" placeholder="Отчество">
                                        <span asp-validation-for="MiddleName" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" name="lastname" class="form-control" required="required" placeholder="Фамилия*">
                                        <span asp-validation-for="LastName" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" name="address" class="form-control" required="required" placeholder="Адрес *">
                                        <span asp-validation-for="Address" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="text" name="index" class="form-control" required="required" placeholder="Почтовый индекс*">
                                        <span asp-validation-for="Index" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <select name="country" class="form-control">
                                            <option value="Россия">Россия</option>
                                            <option value="Украина">Украина</option>
                                        </select>
                                        <span asp-validation-for="Country" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <select name="city" class="form-control">
                                            <option value="Санкт-Петербург">Санкт-Петербург</option>
                                            <option value="Москва">Москва</option>
                                            <option value="Киев">Киев</option>
                                        </select>
                                        <span asp-validation-for="City" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="number" name="phone" class="form-control" required="required" placeholder="Телефон*">
                                        <span asp-validation-for="Phone" />
                                    </div>
                                    <div class="form-group col-md-12">
                                        <input type="submit" name="submit" class="btn btn-primary pull-right" value="Отправить">
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="review-payment">
                <h2>Предпросмотр корзины</h2>
            </div>
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Товары</td>
                            <td class="description"></td>
                            <td class="price">Цена</td>
                            <td class="quantity">Количество</td>
                            <td></td>
                        </tr>
                    </thead>
                    @if (cartNotFiltered != null)
                    {
                        @foreach (var item in cartFiltered)
                        {
                            <tbody>
                                <tr>
                                    <td class="cart_product ">
                                        <a href=""><img class="img_small" src="@item.PictureMain" alt=""></a>
                                    </td>
                                    <td class="cart_description">
                                        <h4><a href="">@item.Name"</a></h4>

                                    </td>
                                    <td class="cart_price">
                                        <p>@item.Price</p>
                                    </td>
                                    <td class="cart_quantity">
                                        <div class="cart_quantity_button">
                                            <a class="cart_quantity_input" type="text" name="quantity" autocomplete="off" size="2">@cartNotFiltered.Count(cart => cart.ProductId == item.ProductId)</a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>

        </div>
    </section> <!--/#cart_items-->

    <footer id="footer">
        <!--Footer-->
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="single-widget">

                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">

                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Сервис</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="">Поддержка</a></li>
                                <li><a href="">Контакты</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Товары</h2>
                            <ul class="nav nav-pills nav-stacked">
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </footer><!--/Footer-->

    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>